<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/backdrop">

    <Button
            android:text="Next"
            android:layout_width="350dp"
            android:layout_height="45dp" android:id="@+id/nextButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:visibility="visible"
            app:layout_constraintVertical_bias="0.65" android:textColor="#FDFDFD"
            android:textSize="15sp"
            android:background="@drawable/round_corners_0f1923" android:fontFamily="@font/nunito_semibold"
            android:textAllCaps="false"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.5" android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true" android:layout_marginBottom="19dp"/>
    <TextView
            android:text="My Groups"
            android:layout_width="247dp"
            android:layout_height="75dp" android:id="@+id/textView"

            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="642dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="105dp" android:layout_marginStart="21dp" android:textColor="#FFFFFF"
            android:textSize="36sp" android:fontFamily="@font/nunito_semibold"
            app:layout_constraintHorizontal_bias="0.357"
            app:layout_constraintVertical_bias="0.964" android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"/>
    <androidx.recyclerview.widget.RecyclerView

            android:id="@+id/groupRecyclerView"
            android:layout_width="wrap_content"
            android:layout_height="488dp"
            android:background="@android:color/transparent"
            android:padding="10dp"
            android:scrollbars="vertical" android:layout_alignParentBottom="true"
            android:layout_marginBottom="90dp" android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true" android:layout_marginStart="13dp" android:layout_marginEnd="17dp"
            android:layout_centerInParent="true" android:layout_alignParentRight="true"
            android:layout_marginLeft="13dp" android:layout_marginRight="17dp" android:layout_alignParentLeft="true"/>
    <TextView
            android:text="Which groups would you like to post to?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentStart="true"
            android:layout_marginStart="16dp" android:layout_alignParentLeft="true" android:layout_alignParentTop="true"
            android:layout_marginTop="112dp" android:layout_marginLeft="16dp" android:id="@+id/textView2"
            android:textColor="#FFFFFF" android:textSize="18sp" android:fontFamily="@font/nunito"/>
    <ImageView
            android:layout_width="47dp"
            android:layout_height="44dp" android:background="@drawable/nav_create_icon"
            android:layout_alignParentRight="true" android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true" android:layout_marginEnd="42dp" android:layout_marginRight="42dp"
            android:id="@+id/imageView69" android:layout_marginTop="39dp" app:tint="#EAE0E0"
            android:visibility="visible"  />


</RelativeLayout>