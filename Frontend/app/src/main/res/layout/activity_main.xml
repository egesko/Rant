<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@drawable/backdrop">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rant."
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="#FDFDFD" android:textSize="45sp"
            android:fontFamily="@font/pacifico"
            app:layout_constraintVertical_bias="0.355" android:id="@+id/textView4"/>
    <Button
            android:text="Create New Account"
            android:layout_width="350dp"
            android:layout_height="45dp"
            android:id="@+id/newAccountButton"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.491"
            app:layout_constraintVertical_bias="0.499"
            android:textColor="#FDFDFD"
            android:fontFamily="@font/nunito_semibold"
            android:textSize="15sp"
            android:textAllCaps="false"
            android:background="@drawable/round_corners_464c6b"/>
    <Button
            android:text="Log In"
            android:layout_width="350dp"
            android:layout_height="45dp"
            android:id="@+id/loginButton"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.491"
            app:layout_constraintVertical_bias="0.571"
            android:textColor="#FDFDFD"
            android:fontFamily="@font/nunito_semibold"
            android:textSize="15sp"
            android:textAllCaps="false" android:background="#000F1923"/>
</androidx.constraintlayout.widget.ConstraintLayout>