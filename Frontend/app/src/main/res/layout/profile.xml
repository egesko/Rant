<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".ProfileActivity" android:background="#000000">

    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/name"
            android:textColor="#FFFFFF" android:textSize="30sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:fontFamily="@font/pacifico" android:layout_marginTop="20dp" android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="50dp"
            android:layout_marginTop="100dp" android:layout_marginLeft="15dp" android:layout_marginStart="15dp"
            android:layout_marginRight="15dp" android:layout_marginEnd="15dp" android:id="@+id/linearLayout">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_corners_464c6b" android:paddingLeft="7dp" android:paddingTop="0dp"
                android:paddingRight="7dp" android:paddingBottom="0dp">
            <TextView
                    android:text="TextView"
                    android:textAllCaps="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/rantTitle"
                    android:textColor="#FFFFFF" android:textSize="16sp" android:lineSpacingExtra="2dp"
                    android:fontFamily="@font/nunito_semibold"
                    android:layout_gravity="center" android:layout_marginTop="15dp"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/rantTags"
                    android:textColor="#FFFFFF" android:fontFamily="@font/nunito"
                    android:layout_gravity="center" android:layout_marginTop="5dp" android:layout_marginBottom="10dp"/>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rant_text_background" android:paddingLeft="25dp"
                    android:paddingTop="15dp" android:paddingRight="25dp" android:paddingBottom="15dp">
                <TextView
                        android:text="TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/rantBody"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp" android:lineSpacingExtra="2dp"
                        android:fontFamily="@font/nunito"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" android:layout_marginTop="10dp" android:layout_marginBottom="15dp">
                <TextView
                        android:text="Likes: 3000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/rantLikes"
                        android:textColor="#FFFFFF"
                        android:fontFamily="@font/fjalla_one"/>
                <Space
                        android:layout_width="50dp"
                        android:layout_height="match_parent" android:layout_weight="1"/>
                <TextView
                        android:text="Dislikes: 3000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/rantDislikes"
                        android:textColor="#FFFFFF"
                        android:fontFamily="@font/fjalla_one"/>
            </LinearLayout>
        </LinearLayout>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/rantTitleEditText"
                android:background="@drawable/round_corners_111111" android:textColor="#FDFDFD"
                android:fontFamily="@font/nunito"
                android:textSize="15sp" android:hint="Edit Rant Title" android:textColorHint="#8A8A8A"
                android:paddingLeft="20dp" android:layout_marginTop="20dp"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/rantTagsEditText"
                android:background="@drawable/round_corners_111111" android:textColor="#FDFDFD"
                android:fontFamily="@font/nunito"
                android:textSize="15sp" android:hint="Edit Rant Tags" android:textColorHint="#8A8A8A"
                android:paddingLeft="20dp" android:layout_marginTop="20dp"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/rantBodyEditText"
                android:background="@drawable/round_corners_111111" android:textColor="#FDFDFD"
                android:fontFamily="@font/nunito"
                android:textSize="15sp" android:hint="Edit Rant Message" android:textColorHint="#8A8A8A"
                android:paddingLeft="20dp" android:layout_marginTop="20dp"/>
        <Button
                android:text="Update Rant"
                android:layout_width="match_parent"
                android:layout_height="45dp" android:id="@+id/updateButton"
                android:textColor="#FDFDFD"
                android:background="@drawable/round_corners_0f1923"
                android:fontFamily="@font/nunito_semibold" android:textSize="15sp"
                android:radius="5dip"
                android:textAllCaps="false"
                android:layout_marginTop="20dp"/>
        <Button
                android:text="Delete Rant"
                android:layout_width="match_parent"
                android:layout_height="45dp" android:id="@+id/deleteButton"
                android:textColor="#FDFDFD"
                android:background="@drawable/round_corners_464c6b"
                android:fontFamily="@font/nunito_semibold" android:textSize="15sp"
                android:radius="5dip"
                android:textAllCaps="false"
                android:layout_marginTop="20dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>