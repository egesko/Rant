<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginActivity"
        android:background="@drawable/backdrop"
        android:clickable="false"
        android:id="@+id/LoginTextEdit">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="English (United States)"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias=".13"
            tools:visibility="visible" android:id="@+id/language"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="14sp" android:textColor="#AEAEB2"
            android:fontFamily="@font/nunito"/>
    <TextView
            android:text="Rant."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/logo"
            android:textSize="36sp"
            android:fontFamily="@font/pacifico" android:textColor="#FDFDFD"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.3"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"/>
    <EditText
            android:id="@+id/loginEditText"
            android:layout_height="45dp"
            android:layout_width="350dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias=".45"
            android:background="@drawable/round_corners_111111" android:inputType="textEmailAddress"
            android:textColor="#FDFDFD" android:textSize="15sp" android:hint="Email"
            android:textColorHint="#8A8A8A" android:fontFamily="@font/nunito" android:paddingLeft="20dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <EditText
            android:id="@+id/passEditText"
            android:layout_height="45dp"
            android:layout_width="350dp"
            android:visibility="visible" android:inputType="textPassword"
            android:background="@drawable/round_corners_111111"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:hint="Password"
            app:layout_constraintVertical_bias=".53" android:textColorHint="#8A8A8A"
            android:fontFamily="@font/nunito"
            android:textSize="15sp" android:textColor="#FDFDFD" android:paddingLeft="20dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="Log In"
            android:layout_width="350dp"
            android:layout_height="45dp" android:id="@+id/loginButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:visibility="visible"
            app:layout_constraintVertical_bias="0.65" android:textColor="#FDFDFD"
            android:textSize="15sp"
            android:background="@drawable/round_corners_0f1923" android:fontFamily="@font/nunito_semibold"
            android:textAllCaps="false"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.5"/>
    <TextView
            android:text="Donâ€™t have an account? Sign Up."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/register"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:clickable="true" android:textColor="#FDFDFD" app:layout_constraintVertical_bias="0.94"
            app:layout_constraintTop_toTopOf="parent" android:fontFamily="@font/nunito_semibold"
            android:textSize="14sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
