<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:background="@drawable/backdrop">

    <Button
            android:text="Make Moderator?"
            android:layout_width="167dp"
            android:layout_height="40dp" android:id="@+id/makeModeratorButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:visibility="visible"
            app:layout_constraintVertical_bias="0.761" android:textColor="#FDFDFD"
            android:textSize="15sp"
            android:background="@drawable/round_corners_464c6b" android:fontFamily="@font/nunito_semibold"
            android:textAllCaps="false"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.127" android:layout_marginTop="32dp"
            android:layout_marginRight="8dp" android:layout_marginEnd="8dp"/>
    <Button
            android:text="Invite!"
            android:layout_width="350dp"
            android:layout_height="60dp" android:id="@+id/inviteMemberToGroupButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:visibility="visible"
            app:layout_constraintVertical_bias="0.926" android:textColor="#FDFDFD"
            android:textSize="15sp"
            android:background="@drawable/round_corners_0f1923" android:fontFamily="@font/nunito_semibold"
            android:textAllCaps="false"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.491"/>
    <EditText
            android:id="@+id/enterEmailToInvite"
            android:layout_height="65dp"
            android:layout_width="350dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.483"
            android:background="@drawable/round_corners_111111" android:inputType="textEmailAddress"
            android:textColor="#FDFDFD" android:textSize="15sp"
            android:textColorHint="#8A8A8A" android:fontFamily="@font/nunito" android:paddingLeft="20dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.491"
            android:hint="Enter email to invite"/>
    <TextView
            android:text="Invite Users"
            android:layout_width="227dp"
            android:layout_height="75dp" android:id="@+id/textView"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="70dp" android:layout_marginEnd="277dp" android:layout_marginRight="277dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="642dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="105dp" android:layout_marginStart="105dp" android:textColor="#FFFFFF"
            android:textSize="36sp" android:fontFamily="@font/nunito_semibold"
            app:layout_constraintHorizontal_bias="0.383"
            app:layout_constraintVertical_bias="0.428"/>
</androidx.constraintlayout.widget.ConstraintLayout>